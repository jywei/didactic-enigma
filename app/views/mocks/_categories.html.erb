<div class="container" style="margin-top: 20px;">
  <div class="btn btn-primary select-category">根據分類選擇場次</div>
  <div class="categories">
    <% @list_sports.each do |sport_id, categories| %>
      <div class="col-sm-12">
        <h4><%= sport_name(sport_id) %></h4>
      </div>
      <% categories.each do |category| %>
        <div class="col-sm-2">
          <%= link_to category[:name], "/manager?category_id=#{category[:id]}" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
